# YARR! Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
PORT=58827
HTTPS_PORT=58828

# Zilean Database (FREE, recommended for best performance)
# Public instance: https://zilean.elfhosted.com
ZILEAN_URL=https://zilean.elfhosted.com

# Prowlarr Integration (Optional)
# Install Prowlarr locally or use a hosted instance
PROWLARR_URL=http://localhost:9696
PROWLARR_API_KEY=

# Jackett Integration (Optional)
# Alternative to Prowlarr
JACKETT_URL=http://localhost:9117
JACKETT_API_KEY=

# Trakt Integration (Optional)
# Register an app at https://trakt.tv/oauth/applications
# Required for Trakt features like recommendations and smart config
TRAKT_CLIENT_ID=

# Debug Mode (Optional)
# Set to 'true' for verbose logging
DEBUG=false

